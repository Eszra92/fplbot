@page
@model FplBot.WebApi.Pages.Admin.Index

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Admin</title>
</head>
<body>
<div>
    <h1>Admin page</h1>
    <p>Logged in as @User.Identity.Name</p>
    <p><a href="@Url.Action("Logout","Account")">Log out</a></p>
    
    <h3>Workspaces that have installed fplbot</h3>
    <ul>
        @if (Model.Workspaces.Any())
        {
            foreach (var ws in Model.Workspaces)
            {
                <li>
                    @ws.TeamName: (@ws.FplbotLeagueId in @ws.FplBotSlackChannel)
                </li>
            }

        }else
        {
            <p>No installs :/</p>
        }
      
    </ul>
</div>
</body>
</html>